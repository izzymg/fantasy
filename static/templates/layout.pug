<!DOCTYPE html>
html
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width: device-width, initial-scale=1.0")
        link(rel="stylesheet" href="/css/layout.css")
        block head
    body
        .navbar
            a(href="/") Home
            a(href="/boards") Boards
            if session && session.username
                a.right(href=`${auth}/logout`) Logout - #{session.username}
            if isModOrAdmin
                a.right You moderate this board
            else
                a.right(href="/login") Login
        .statusbox
            span.text awd
            span.close X
        .pagecontent
            block content