mixin threadPreview(post)
    .threadPreview
        a(href="threads/" + post.id title=new Date(post.createdAt).toLocaleString())
            if post.files && post.files[0]
                - let file = post.files[0]
                    if file.thumbSuffix               
                        img(src=`${files}/${file.fileId}${file.thumbSuffix}.jpg`).thumbnail
                    else
                        a(href=`${files}/${file.fileId}.${file.extension}`).fileLink !{file.originalName}
            if post.subject
                span.subject !{post.subject}
            p.content !{post.content}